[colors]
background = #282c34
background-alt = #444
foreground = #dfdfdf
foreground-alt = #FFFFFF
primary = #61afef
secondary = #98c379
line-color = #f00

alert = #e06c75

[bar/main]
monitor=${env:MONITOR:}
width = 100%
height = 26
radius = 0
fixed-center = true
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = ${colors.secondary}

padding-left = 0
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = ubuntu:pixelsize=12;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = FontAwesome5Free:style=Solid:pixelsize=10;1

modules-left = bspwm spotify
modules-center = title
modules-right = eth memory cpu mic-volume pulseaudio date powermenu

tray-position = right
tray-padding = 2

wm-restack = bspwm

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = ns-resize

[bar/secondary]
inherit = bar/main

tray-position = none
modules-left = bspwm spotify
modules-center = title
modules-right = eth memory cpu mic-volume pulseaudio date powermenu

[bar/vertical]
inherit = bar/secondary

modules-left = bspwm short-spotify
modules-center = title
modules-right = mic-volume short-pulseaudio short-date powermenu

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted =   %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}
label-mounted-underline = ${colors.secondary}

[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-occupied = %name%
label-occupied-padding = 2

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.secondary}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.secondary}
label = %percentage_used%%

[module/eth]
type = internal/network
interface = eno1
interval = 3.0

format-connected-underline = ${colors.secondary}
format-connected-prefix =
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %{T6} %downspeed%    %upspeed%%{T-}

format-disconnected-prefix = "Net: "
format-disconnected = <label-disconnected>
format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = "Disconnected"
label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 1

date = %d %b %Y
date-alt = %A %d %b %Y

time = %H:%M
time-alt= %H:%M:%S

format-prefix =
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.secondary}

label = %date% / %time%

[module/short-date]
inherit = module/date

date =
date-alt = %a %d %b %Y /

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

sink = alsa_output.usb-Kingston_HyperX_Virtual_Surround_Sound_00000000-00.analog-stereo

format-volume = <label-volume> <bar-volume>
label-volume =   %percentage%%
label-volume-foreground = ${root.foreground}

label-muted =   muted
label-muted-foreground = #666

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.secondary}
bar-volume-foreground-1 = ${colors.secondary}
bar-volume-foreground-2 = ${colors.secondary}
bar-volume-foreground-3 = ${colors.secondary}
bar-volume-foreground-4 = ${colors.secondary}
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/short-pulseaudio]
inherit = module/pulseaudio

format-volume = <label-volume>

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1
format-underline = ${colors.primary}

label-open = 
label-open-foreground = ${colors.secondary}
; label-close =  cancel
label-close = cancel
label-close-foreground = ${colors.secondary}
label-separator = -
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = power off
menu-0-0-exec = menu-open-1

menu-1-0 = confirm
menu-1-0-exec = shutdown now

[module/mic-volume]
type = custom/script
interval = 1
format = <label>
click-left = sh ~/.config/polybar/mic-volume/fix-mic-volume.sh
exec = sh ~/.config/polybar/mic-volume/mic-volume.sh 'Meteor'

[module/spotify]
type = custom/script
interval = 1
format = <label>
exec = python ~/.config/polybar/polybar-spotify/spotify_status.py -f '{song}: {artist}' -t 64
format-underline = ${colors.secondary}
; Controls require playerctl to be installed
click-left = playerctl play-pause --player=spotify
click-right = playerctl next --player=spotify
click-middle = playerctl previous --player=spotify

[module/short-spotify]
inherit = module/spotify
exec = python ~/.config/polybar/polybar-spotify/spotify_status.py -f '{song}: {artist}' -t 32

[module/title]
type = internal/xwindow

[settings]
screenchange-reload = true
pseudo-transparency = true

[global/wm]
margin-top = 0
margin-bottom = 0
