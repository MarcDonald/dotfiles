[alias]
	co = checkout
	st = status
	cm = commit
	cmm = commit -m
	cl = clone
	b = branch
	lo = log --oneline
	lg = log --oneline --graph --decorate
	yeehaw = push --force
	cane = commit --amend --no-edit
	pr = pull --rebase
	gaa = add .
	cob = checkout -b
	df = diff --color
  dfc = diff --cached --color
  dft = difftool
  dlog = "-c diff.external=difft log -p --ext-diff"
[user]
	email = dev@marcdonald.com
	name = Marc Donald
	signingKey = 95BA7DEC5B88788A1A6219C31443FF3E486DC689
[color]
	ui = true
	status = auto
	branch = auto
[core]
	autocrlf = input
	editor = nvim
  pager = diff-so-fancy | less --tabs=4 -RFX
[diff]
  tool = difftastic
  external = difft
[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[pager]
  difftool = true
[color "status"]
	changed = blue bold
	untracked = cyan bold
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pull]
	ff = only
	rebase = true
[merge]
	commit = no
	ff = yes
[help]
	autoCorrect = 1
[init]
	defaultBranch = main
 [url "ssh://git@github.com/marcdonald/homebrew-tools"]
 	insteadOf = https://github.com/marcdonald/homebrew-tools
[commit]
	gpgSign = true
[push]
	autoSetupRemote = true
	default = current
[gpg]
	program = /usr/local/MacGPG2/bin/gpg
