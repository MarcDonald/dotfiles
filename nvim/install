#!/usr/bin/env bash

mkdir -p ~/.config/nvim/plugin
mkdir -p ~/.config/nvim/after/plugin
mkdir -p ~/.config/nvim/lua

ln -s ~/Documents/dotfiles/nvim/init.vim ~/.config/nvim/init.vim
for f in `find . -regex ".*\.vim$"`; do
	rm -rf ~/.config/nvim/$f
	ln -s ~/Documents/dotfiles/nvim/$f ~/.config/nvim/$f
done
